<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@id/til_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <rf.vacation35.screen.view.EditSpinner
            android:id="@id/es_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="База отдыха"
            android:imeOptions="actionNext"
            android:inputType="none"
            android:maxLines="1"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            android:textSize="15.5sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@id/til_building"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/til_base">

        <rf.vacation35.screen.view.EditSpinner
            android:id="@id/es_building"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Постройка"
            android:imeOptions="actionNext"
            android:inputType="none"
            android:maxLines="1"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            android:textSize="15.5sp" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
